{% extends 'AdminBaseBundle::base.html.twig' %}

{% block workspace %}
  <h3><i class="fa fa-angle-right"></i> Items</h3>
  <div class="row mt">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-body">
          <table class="table">
            <thead>
              {% for label, field in fields %}
                <th>{{ sensible(label, field) }}</th>
              {% endfor %}
            </thead>
            <tbody>
              {% for entity in entities %}
                <tr>
              {% for label, field in fields %}
                <th>{{ attribute(entity, field) }}</th>
              {% endfor %}
                  <td>
                    <a href="view/{{entity.id}}">View</a>
                    <a href="edit/{{entity.id}}">Edit</a>
                    <a href="#" data-action="delete/{{entity.id}}" data-toggle="modal" data-target="#modal-delete">Delete</a>
                  </td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

{% block extras %}
  {% include 'AdminBaseBundle:Crud/modal/delete.html.twig' %}
{% endblock %}
