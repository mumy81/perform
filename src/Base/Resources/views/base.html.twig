<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Site Administration</title>
    <link rel="stylesheet" type="text/css" href="{{asset('bundles/adminbase/css/app.css')}}" />
  </head>
  <body>
    {% block body %}
      <section id="container">
        <header>
          <div class="sidebar-toggle-box">
            <div class="fa fa-minus-square-o" id="menu-toggle" data-toggle="tooltip" data-placement="right" title="Toggle Navigation"></div>
          </div>

          <a href="{{path('admin_base_dashboard_index')}}" class="logo">Site Administration</a>
          <div class="top-menu">
            <ul class="nav pull-right top-menu">
              <li><a class="logout" href="{{path('admin_base_logout')}}">Logout</a></li>
            </ul>
          </div>
        </header>

        <aside>
          <div id="sidebar" class="nav-collapse ">
            {{ knp_menu_render('main') }}
          </div>
        </aside>

        <section id="main-content">
          <section class="wrapper site-min-height">
            <div class="row">
              <div class="col-md-8 col-md-offset-2 flash-messages">
                {% for class, messages in app.session.flashbag.all %}
                  {% for message in messages %}
                    <div class="alert alert-{{ class }}">
                      {{ message }}
                      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                  {% endfor %}
                {% endfor %}
              </div>
            </div>

            {% block workspace %}
            {% endblock %}
          </section>
        </section>

        <footer class="site-footer">
          <div class="text-center">
            A <a target="_blank" href="//glynnforrest.com">glynnforrest.com</a> project.
          </div>
        </footer>

      </section>

    {% endblock %}

    {% block extras %}
    {% endblock %}

    {% block baseJs %}
      <script src="{{asset('bundles/adminbase/vendor/jquery/dist/jquery.min.js')}}"></script>
      <script src="{{asset('bundles/adminbase/vendor/jquery.cookie/jquery.cookie.js')}}"></script>
      <script src="{{asset('bundles/adminbase/js/lib/dcjqaccordian.js')}}"></script>
      <script src="{{asset('bundles/adminbase/vendor/bootstrap-sass/assets/javascripts/bootstrap.min.js')}}"></script>
      <script src="{{asset('bundles/adminbase/vendor/underscore/underscore-min.js')}}"></script>
      <script src="{{asset('bundles/adminbase/vendor/backbone/backbone-min.js')}}"></script>
      <script src="{{asset('bundles/adminbase/vendor/moment/min/moment.min.js')}}"></script>
      <script src="{{asset('bundles/adminbase/vendor/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js')}}"></script>
      <script src="{{asset('bundles/adminbase/js/admin-base.js')}}"></script>
    {% endblock %}
    {% block js %}
    {% endblock %}
  </body>
</html>
